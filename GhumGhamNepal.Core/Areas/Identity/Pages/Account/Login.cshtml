    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-dark text-white" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">

                    <div class="mb-md-0 mt-md-4 ">

                        <div class="row">
                            <section>
                                <form id="account" method="post">
                                    <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                                    <hr />
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-outline form-white form-group">
                                        <label asp-for="Input.Email" class="form-label control-label-lg"></label>
                                        <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline form-white form-group">
                                        <label asp-for="Input.Password" class="form-label control-label-lg"></label>
                                        <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div><br />

                                    <div>
                                        <div class="checkbox">
                                            <label asp-for="Input.RememberMe" class="form-label">
                                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="form-group d-flex justify-content-evenly ">
                                        <button asp-route-returnUrl="@Model.ReturnUrl" id="login-submit" type="submit" class="btn btn-outline-light btn-primary btn-lg px-4">LOGIN</button>
                                        <a asp-action="Index" asp-controller="Home" class="btn btn-danger btn-outline-light px-4  btn-lg">Cancel</a>
                                    </div><br />
                                    <div>
                                        <p>
                                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                        </p>
                                        <p>
                                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                        </p>
                                        
                                    </div>
                                </form>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
