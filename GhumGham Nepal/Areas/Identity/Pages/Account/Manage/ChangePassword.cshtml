@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h1><b>@ViewData["Title"]</b></h1>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-outline form-white form-group mt-2">
                <input asp-for="Input.OldPassword" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.OldPassword" class="form-label control-label-lg"></label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-outline form-white form-group mt-2">
                <input asp-for="Input.NewPassword" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.NewPassword" class="form-label control-label-lg"></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-outline form-white form-group mt-2">
                <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="form-label control-label-lg"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <button type="submit" class="w-100 btn btn-lg btn-primary">Update password</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
