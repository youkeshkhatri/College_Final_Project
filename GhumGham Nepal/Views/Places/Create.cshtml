<div class="container-md">

    @model GhumGham_Nepal.DTO.PlaceDTO


    @{
        ViewData["Title"] = "Create";
    }
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    @{
        Layout = null;
    }

    <h1>Add new Place</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PlaceName" class="control-label"></label>
                    <input asp-for="PlaceName" class="form-control" />
                    <span asp-validation-for="PlaceName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Introduction" class="control-label"></label>
                    <input asp-for="Introduction" class="form-control" />
                    <span asp-validation-for="Introduction" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description1" class="control-label"></label>
                    <textarea asp-for="Description1" class="form-control" rows="7"></textarea>
                    <span asp-validation-for="Description1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description2" class="control-label"></label>
                    <textarea asp-for="Description2" class="form-control" rows="7"></textarea>
                    <span asp-validation-for="Description2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description3" class="control-label"></label>
                    <textarea asp-for="Description3" class="form-control" rows="7"></textarea>
                    <span asp-validation-for="Description3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Hotel1" class="control-label"></label>
                    <textarea asp-for="Hotel1" class="form-control" rows="7"></textarea>
                    <span asp-validation-for="Hotel1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Hotel2" class="control-label"></label>
                    <textarea asp-for="Hotel2" class="form-control" rows="7"></textarea>
                    <span asp-validation-for="Hotel2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Hotel3" class="control-label"></label>
                    <textarea asp-for="Hotel3" class="form-control" rows="7"></textarea>
                    <span asp-validation-for="Hotel3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="ThumbnailFile" class="control-label">Choose Cover Photo</label>
                    <div class="custom-file">
                        <label class="custom-file-label" for="customFile"></label>
                        <input asp-for="ThumbnailFile" class="form-control custom-file-input" id="customFile">
                    </div>
                    <span asp-validation-for="ThumbnailFile" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    @*<button type="reset" value="Reset" class="btn btn-close"></button>*@
                      <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    </div>
