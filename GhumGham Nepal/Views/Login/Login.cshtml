@model GhumGham_Nepal.Models.Registration

@{
    ViewData["Title"] = "Login";
}
@{
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<style>
    .gradient-custom {
        /* fallback for old browsers */
        background: #6a11cb;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
    }
</style>


<form asp-action="Login">
    <div class="container py-5 " style="width:75%;">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 ">

                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 ">Please enter your username and password!</p>

                            <div class="form-outline form-white form-group">
                                <label asp-for="Username" class="form-label control-label-lg"></label>
                                <input asp-for="Username" class="form-control form-control-lg" required />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white form-group">
                                <label asp-for="Password" class="control-label-lg"></label>
                                <input type="password" asp-for="Password" class="form-control form-control-lg" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <p class="small  pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>

                            <div class="d-flex justify-content-evenly">
                                <input type="submit" value="Login" class="btn btn-primary btn btn-outline-light btn-lg px-5" />
                                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-light btn-lg px-5" type="submit">Cancel</a>
                            </div>


                        </div>

                        <div>
                            <p class="mb-0">
                                Don't have an account? <a asp-controller="Registrations" asp-action="Create" class="text-white-50 fw-bold">Sign Up</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
